<div class="sub_section_title">This visit</div>
<script type="text/javascript" src="/js/clinicr_search.js"></script>
<div id="update_form_section">
  <form method="post" action="/visitHistory/updateHistory" location="#update_form" id="update_form" name="update_form">
    <table id="update_history_form">
      <%
      @fields_array_display.each do |field|
      %>
      <tr>
        <td><%=field%></td>
        <td><textarea name="<%=@fields_array_actual[@fields_array_display.index(field)]%>"/></td>
      </tr>
      <%end%>
    </table>
    <input type="hidden" name="id" value="<%=@id%>">
    <input type="submit" value="Record">
    <button onclick="javascript:hideOverlay();return false">Close</button>
  </form>
</div>
<div id="update_result"></div>